<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="payum2.heartland.payment.class">Payum2\Payment</parameter>
        <parameter key="payum2.heartland.api.class">Payum2\Heartland\Api</parameter>
        <parameter key="payum2.heartland.soap.class">Payum2\Heartland\SoapClient</parameter>
        <parameter key="payum2.heartland.action.make_blind_payment.class">Payum2\Heartland\Action\MakeBlindPaymentAction</parameter>
        <parameter key="payum2.heartland.action.register_token_to_additional_merchant.class">Payum2\Heartland\Action\RegisterTokenToAdditionalMerchantAction</parameter>
        <parameter key="payum2.heartland.action.get_token.class">Payum2\Heartland\Action\GetTokenAction</parameter>
        <parameter key="payum2.heartland.action.status.class">Payum2\Heartland\Action\StatusAction</parameter>
    </parameters>

    <services>
        <service
            id="payum2.heartland.api"
            class="%payum.heartland.api.class%"
            abstract="true"
            public="false"
        >
            <!-- It is template service. The real service will be created by HeartlandPaymentFactory -->
            <argument/>
        </service>

        <service
            id="payum2.heartland.action.make_blind_payment"
            class="%payum.heartland.action.make_blind_payment.class%"
            public="false"
        >
        </service>

        <service
            id="payum2.heartland.action.register_token_to_additional_merchant"
            class="%payum.heartland.action.register_token_to_additional_merchant.class%"
            public="false"
        >
        </service>

        <service
            id="payum2.heartland.action.get_token"
            class="%payum.heartland.action.get_token.class%"
            public="false"
        >
        </service>

        <service
            id="payum2.heartland.action.status"
            class="%payum.heartland.action.status.class%"
            public="false"
        >
        </service>
    </services>
</container>

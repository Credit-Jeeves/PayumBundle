<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="payum2.class">Payum2\Bundle\PayumBundle\Registry\ContainerAwareRegistry</parameter>
        <parameter key="payum2.payment.class">Payum2\Payment</parameter>
        <parameter key="payum2.token_manager.class">Payum2\Bundle\PayumBundle\Service\TokenManager</parameter>
        <parameter key="payum2.extension.storage.class">Payum2\Extension\StorageExtension</parameter>
        <parameter key="payum2.extension.endless_cycle_detector.class">Payum2\Extension\EndlessCycleDetectorExtension</parameter>
        <parameter key="payum2.buzz.client.class">Buzz\Client\Curl</parameter>
        <parameter key="payum2.listener.interactive_request.class">Payum2\Bundle\PayumBundle\EventListener\InteractiveRequestListener</parameter>

        <parameter key="payum2.action.capture_details_aggregated_model.class">Payum2\Action\CaptureDetailsAggregatedModelAction</parameter>
        <parameter key="payum2.action.sync_details_aggregated_model.class">Payum2\Action\SyncDetailsAggregatedModelAction</parameter>
        <parameter key="payum2.action.status_details_aggregated_model.class">Payum2\Action\StatusDetailsAggregatedModelAction</parameter>
    </parameters>

    <services>
        <service id="payum2" class="%payum2.class%">
            <argument type="collection" /> <!-- payments services. this should be replaced while container is built -->
            <argument type="collection" /> <!-- storages services. this should be replaced while container is built -->
            <argument /> <!-- payment default name. this should be replaced while container is built -->
            <argument /> <!-- storage default name. this should be replaced while container is built -->

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="payum2.buzz.client" class="%payum2.buzz.client.class%" public="false">
            <call method="setTimeout">
                <argument>200</argument>
            </call>
        </service>

        <service id="payum2.token_manager" class="%payum2.token_manager.class%">
            <argument type="service" id="router"></argument>
            <argument type="service" id="payum2"></argument>
        </service>

        <service
            id="payum2.extension.endless_cycle_detector"
            class="%payum2.extension.endless_cycle_detector.class%"
            public="false"
        />

        <service 
            id="payum2.extension.storage.prototype"
            class="%payum2.extension.storage.class%"
            abstract="true"
            public="false"
        >
            <argument/> <!-- this should be replaced with real storage service -->
        </service>

        <service id="payum2.listener.interactive_request" class="%payum2.listener.interactive_request.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" priority="128" />
        </service>

        <service 
            id="payum2.action.capture_details_aggregated_model"
            class="%payum2.action.capture_details_aggregated_model.class%"
        />

        <service
            id="payum2.action.sync_details_aggregated_model"
            class="%payum2.action.sync_details_aggregated_model.class%"
        />

        <service
            id="payum2.action.status_details_aggregated_model"
            class="%payum2.action.status_details_aggregated_model.class%"
        />
    </services>
</container>